private void FillTable()
        {
            using (SqlConnection connect = new SqlConnection(@"Data Source="+ Machname+"\\SQLEXPRESS;Initial Catalog=SmarTwinDB;Integrated Security=True"))
            {
                connect.Open();
                string sql;
                SqlCommand com;
                SqlDataAdapter adap = new SqlDataAdapter();
                DataTable dt = new DataTable();
                sql = "SELECT * FROM [dbo].[Alarmhistory]";
                com = new SqlCommand(sql, connect);
                adap.SelectCommand = new SqlCommand(sql, connect);
                adap.Fill(dt);
                dataGridView1.DataSource = dt;
            }

            if (dataGridView1.RowCount > 0)
            {
                dataGridView1.ClearSelection();
                int lastrow = dataGridView1.RowCount - 1;
                dataGridView1.CurrentCell = dataGridView1[0, lastrow];
            }
        }
